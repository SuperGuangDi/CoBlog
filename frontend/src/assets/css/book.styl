@import './default';

@media screen and (min-width: mobile_width) {
  .note-cnt, .home-cnt {
    max-width: max_width;
    margin: 0 auto 40px;
    padding: 0 20px;
  }
}

@media screen and (max-width: mobile_width) {
  .note-cnt, .home-cnt {
    padding: 0 12px;
    margin: 0 auto 40px;
  }
}

.note-box {
  background-color: #fefefe;
  box-shadow: 0 0px 5px 0 rgba(0, 0, 0, 0.1);
  padding-bottom: 20px;
}

.note-each {
  cursor: pointer;
  padding: 1.5% 2.5%;
  border-bottom: 1px solid #efefee;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;

  .click-view {
    width: 100%;
    // background-color: red;
  }

  .btn-view {
    // width: 8%;
    // background-color: blue;
  }

  &:hover {
    box-shadow: 0px 0px 8px 0 rgba(0, 0, 0, 0.1);

    .note-title .title {
      color: theme_color;
    }
  }
}

.note-layout {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

.note-title {
  display: flex;
  display: -webkit-flex;
  align-items: center;

  .title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: default_black;
    font-size: 1rem;
    font-weight: bold;
    margin-left: 0.5rem;
  }
}

.note-content {
  font-size: 0.875rem;
  color: #6f6f6f;
  margin-top: 3px;
  word-wrap: break-word;
  word-break: break-all;
}

.note-time {
  font-size: 0.875rem;
  color: #909399;
  margin-top: 2px;
}

.note-head-small {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;

  .el-input {
    width: 75%;
  }
}

// 新的过滤头部样式
.note-option-cnt {
  background-color: #fff;
  margin-bottom: 20px;
  box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.1);
  padding: 15px 20px;
  default_radius();

  .note-option-title {
    font-size: 1.25rem;
    // color: #909399;
    color: theme_color;
    font-weight: 500;
    letter-spacing: 1px;
    margin-bottom: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .note-option-input .note-input {
    width: calc(100% - 3.5rem);
  }

  .note-option-select .note-input {
    width: calc(100% - 2.5rem);
  }
}

@media screen and (min-width: mobile_width) {
  .note-option-filter {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;

    .note-option-input {
      width: 70%;
    }

    .note-option-select {
      width: 28%;
    }
  }
}

// 小屏
@media screen and (max-width: mobile_width) {
  .note-option-cnt {
    .note-option-filter {
      .note-option-input {
        margin-bottom: 10px;
      }

      .note-option-input .note-input, .note-option-select .note-input {
        width: calc(100% - 4rem);
      }
    }
  }
}

/* ----------------     首页样式    ---------------- */
.home-note-box {
  .home-filter-box {
    text-align: right;
    padding: 10px 2.5% 8px;
    border-bottom: 1px solid #efefee;

