@import './default';

@media screen and (min-width: mobile_width) {
  .userpage-cnt {
    max-width: max_width;
    margin: 0 auto 40px;
    padding: 0 20px;
  }
}

@media screen and (max-width: mobile_width) {
  .userpage-cnt {
    padding: 0 12px;
  }
}

.userpage-cnt {
  .head-box {
    background-color: #fff;
    box-shadow: 0 1px 4px 0 rgba(25, 25, 25, 0.1);
    border-radius(4px);
    margin-bottom: 30px;
    position: relative;
    height: 360px;

    #backimg {
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
      background-color: #ccc;
    }

    .img-box {
      position: absolute;
      top: 210px;
      left: 40px;
      width: 120px;
      height: 120px;
      border: 5px solid #fff;
      background-color: #fff;
      border-radius(4px);
    }

    .text-box {
      position: absolute;
      left: 190px;

      // background-color: red;
      h2 {
        line-height: 40px;
        font-size: 1.8rem;
        font-weight: bold;
      }

      p {
        margin-top: 10px;
        line-height: 30px;
        max-width: 500px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
    }
  }
}
